    <input value="<%=user.email%>"  name="email" type="email" name="" id=""  placeholder="email" class="border-black text-xl rounded-lg border-2 outline-none mt-2 bg-white-100 w-1/2 p-2">

<br>
    <a href="/reset-password/<%=user._id%>" class="text-xl w-1/2  mt-0 ml-[-18%] text-blue-500 lowercase ">reset-password</a>
