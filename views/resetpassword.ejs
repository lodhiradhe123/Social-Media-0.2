      <h1 class="bg-zinc-300 w-[50%] rounded-xl p-3 m-auto text-center text-5xl font-extrabold text-blue-400">Reset User
        Password
      </h1>


      <form action="/reset-password/<%= user._id%>" class=" mt-[5%] text-center" method="post">
        <input class="w-[40%] mb-10 border border-zinc-500 p-3 rounded-md text-xl " type="password"
          placeholder="Existing Password" name="oldpassword">
        <br>
        <input class="w-[40%] mb-10 border border-zinc-500 p-3 rounded-md text-xl " type="password"
          placeholder="New Password" name="newpassword">
        <button class="mt-5 text-center block w-[40%] m-auto hover:bg-blue-400 rounded text-white py-3 px-5 bg-zinc-400" ">Reset Password</button>
      </form>
    
